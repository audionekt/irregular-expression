{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "aurigami": ["../../packages/ui/src/index.ts"],
      "aurigami/*": ["../../packages/ui/src/*"],
      "@repo/api": ["../../packages/api/src/index.ts"],
      "@repo/api/*": ["../../packages/api/src/*"],
      "@repo/styles": ["../../packages/styles/src/index.ts"],
      "@repo/styles/*": ["../../packages/styles/src/*"],
      "@repo/tokens": ["../../packages/tokens/src/index.ts"],
      "@repo/tokens/*": ["../../packages/tokens/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
